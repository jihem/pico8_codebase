_fill=(function()
 local c,f
 f=function (x,y)
  if x>-1 and x<128 and
     y>-1 and y<128 and
     pget(x,y)==c then
   pset(x,y)
   f(x-1,y) f(x+1,y)
   f(x,y-1) f(x,y+1)    
  end
 end
 return function (x,y)
  c=pget(x,y)
  if (peek(0x5f25)!=c) f(x,y)
  c=nil
 end
end)()

local m=t()
function _draw()
 if t()-m>.5 then
  m=t() cls(5) color(6)
  for i=0,10 do
   circ(rnd(128),rnd(128),rnd(32)+5)
  end color(12)
  _fill(63,63)
 end
end
