hill={
 chr='abcdefghijklmnopqrstuvwxyz ',
 cix={},
 new=function(self,o)
  if #self.cix==0 then
   for i=1,#self.chr do
    self.cix[sub(self.chr,i,i)]=i-1
   end
  end
  o=o or {}
  o.mtx=o.mtx or {1,2,3,7}
  self.__index=self
  return setmetatable(o,self)
 end,
 cipher=function(self,msg,mtx)
  local rs,ca,cb,na,nb=''
  mtx=mtx or self.mtx
  if #msg%2==1 then
   msg=msg..' '
  end
  for i=1,#msg,2 do
   ca=self.cix[sub(msg,i,i)]   
   cb=self.cix[sub(msg,i+1,i+1)]
   na=(mtx[1]*ca+mtx[2]*cb)%27+1
   nb=(mtx[3]*ca+mtx[4]*cb)%27+1
   rs=rs..sub(self.chr,na,na)..sub(self.chr,nb,nb)
  end
  return rs
 end,
 decipher=function(self,msg)
  return self:cipher(msg,{
    self.mtx[4],
   -self.mtx[2],
   -self.mtx[3],
    self.mtx[1]
  })
 end 
}
-- |1 3| matrix determinant
-- |2 7| should be 1.
-- 1x7-2x3=1 in this sample
h1=hill:new({mtx={1,3,2,7}})
secret=h1:cipher('hello world')
cls()
print(secret)
print(h1:decipher(secret))

